<h1>Listing tags</h1>

<table>
  <tr>
	<td><b>Name</b></td>
	<td></td>
	<td></td>
	<td></td>
  </tr>

<% @tags.each do |tag| %>
  <tr>
    <td><%= link_to tag.name, tag %></td>
    <td><%= link_to 'Join', join_tag_path(tag) %></td>
    <td><%= link_to 'Edit', edit_tag_path(tag) %></td>
    <td><%= link_to 'Delete', tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

