<% index = 0 %>
<% entries.each do |entry| %>
	<div class="developer_row">
		<%= if entry.developer
			text_field_tag("#{kind}[#{index}][name]", entry.developer.name, class: "#{kind}_link linkFound")
			hidden_field_tag("#{kind}[#{index}[reference]", "{developer: #{entry.developer.id}}")
		elsif entry.company
			text_field_tag("#{kind}[#{index}][name]", entry.company.name, class: "#{kind}_link linkFound")
			hidden_field_tag("#{kind}[#{index}][reference]", "{company: #{entry.company.id}}")
		else
			text_field_tag("#{kind}[#{index}][name]", entry.not_found, class: "#{kind}_link")
			hidden_field_tag("#{kind}[#{index}][reference]")
		end %>

		<%= text_field_tag("#{kind}[#{index}][info]", entry.additional_info, class: "#{kind}_text") %>
		<button type="button" class="add<%=kind.titleize%>Button"> + </button>
		<% index += 1 %>
	</div>
<% end %>
<div class="<%=kind%>_row">
	<%= text_field_tag("#{kind}[#{index}][name]", '', class: "#{kind}_link") %>
	<%= hidden_field_tag("#{kind}[#{index}][reference]") %>
	<%= text_field_tag("#{kind}[#{index}][info]", '', class: "#{kind}_text") %>
	<button type="button" class="add<%=kind.titleize%>Button"> + </button>
	<% index += 1 %>
</div>
